<div class="container mt-5">
  <h1 class="mb-4">Restaurants</h1>

  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mb-3" %>

  <table class="table table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td>
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
          </td>
          <td>
            <%= link_to restaurant.address, restaurant_path(restaurant), class: "text-decoration-none" %>
          </td>
          <td>
            <%= link_to restaurant.category, restaurant_path(restaurant), class: "text-decoration-none" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
